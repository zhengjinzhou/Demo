<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/nav_header_vertical_spacing">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="孔方彬"
        android:textColor="@color/bg_color" />

    <TextView
        android:id="@+id/tvBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/nav_header_vertical_spacing"
        android:layout_toLeftOf="@+id/tvMain"
        android:text="批" />

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/nav_header_vertical_spacing"
        android:layout_toLeftOf="@+id/tvAssist"
        android:text="主" />

    <TextView
        android:id="@+id/tvAssist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/nav_header_vertical_spacing"
        android:layout_toLeftOf="@+id/tvRead"
        android:text="协" />

    <TextView
        android:id="@+id/tvRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/nav_header_vertical_spacing"
        android:text="阅" />
</RelativeLayout>