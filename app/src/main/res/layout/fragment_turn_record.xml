<?xml version="1.0" encoding="utf-8"?>
<zhou.com.demo.view.ReboundScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/nav_header_vertical_spacing">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tvClear"
                android:background="@drawable/ic_accept"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="全选"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                android:layout_toLeftOf="@+id/tvDelete"
                android:background="@drawable/ic_accept"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="清空"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                android:background="@drawable/ic_accept_info"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:text="删除"
                android:textColor="@color/common_bg"
                android:textSize="13sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nav_header_vertical_spacing"
            android:background="@drawable/ic_accept" />
    </LinearLayout>

</zhou.com.demo.view.ReboundScrollView>